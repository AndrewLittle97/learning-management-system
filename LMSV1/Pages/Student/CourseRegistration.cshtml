@page
@model LMSV1.Pages.Student.CourseRegistrationModel

@{
    ViewData["Title"] = "Course Registration";
    bool isEnrolled = false;
}

<h1>Course Registration</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].CourseID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].MeetDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Courses[0].EndTime)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Courses) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeetDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @{
                    if(Model.CurrentStudent.Enrollments != null) {
                        isEnrolled = Model.CurrentStudent.Enrollments.Any(e => e.CourseID == @item.CourseID);
                    }
                }
                <form method="post" style="display:inline;">
                    <input type="hidden" name="studentId" value="@Model.CurrentStudent.Id" />
                    <input type="hidden" name="courseId" value="@item.CourseID" />
                    <input type="submit" value="Register" asp-page-handler="Register" disabled="@isEnrolled" />
                    <input type="submit" value="Drop" asp-page-handler="Drop" disabled="@(!isEnrolled)" />
                </form>
            </td>
        </tr>
    }   
    </tbody>
</table>
